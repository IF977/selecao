<h1>Listando :: Calendário</h1>

<table>
  <thead>
    <tr>
      <th>Processo Seletivo</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @calendarios.each do |calendario| %>
      <tr>
        <td><%= calendario.processo_seletivo.descricao %></td>
        <td><%= link_to 'Ver', calendario %></td>
        <td><%= link_to 'Alterar', edit_calendario_path(calendario) %></td>
        <td><%= link_to 'Remover', calendario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Calendário', new_calendario_path %>
