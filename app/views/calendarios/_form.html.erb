<%= simple_form_for(@calendario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset>
      <legend>Dados do Calendário</legend>
      <%= f.association :processo_seletivo, label_method: :descricao, prompt: "Selecione" %>
      <fieldset>
        <legend>Eventos</legend>
        <table>
          <thead>
            <tr>
              <th>Descrição</th>
              <th>Data inicial</th>
              <th>Data final</th>
              <th>Observações</th>
            </tr>
          </thead>

          <tbody>
            <% Evento.all.each do |evento| %>
              <tr>
                <td><%= evento.descricao %></td>
                
              </tr>
            <% end %>
          </tbody>
        </table>
      </fieldset>
      
    </fieldset>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar", class: "my-button" %>
    <%= link_to 'Voltar', calendarios_path %>
  </div>
<% end %>
