<h1>Listando :: Usuários</h1>

<table>
  <thead>
    <tr>
      <th>E-Mail</th>
      <th>Permissões</th>
      <th colspan="3">Ações</th>
    </tr>

  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.my_roles %></td>
        <td><%= link_to 'Ver', user %> </td> 
        <td><%= link_to 'Alterar', edit_user_path(user) %></td>
        <td><%= link_to 'Remover', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


